<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inserir">

    <TextView
        android:id="@+id/lInserir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="41dp"
        android:text="Inserir item a comprar:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginTop="25dp"
        android:text="NOME:"
        app:layout_constraintEnd_toEndOf="@+id/lInserir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lInserir" />

    <TextView
        android:id="@+id/lMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingTop="8dp"
        android:text="MARCA:"
        app:layout_constraintEnd_toEndOf="@+id/lNome"
        app:layout_constraintTop_toBottomOf="@+id/lNome" />

    <TextView
        android:id="@+id/lQtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginTop="25dp"
        android:text="QUANTIDADE:"
        app:layout_constraintEnd_toEndOf="@+id/lMarca"
        app:layout_constraintTop_toBottomOf="@+id/lMarca" />

    <Button
        android:id="@+id/bCancela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELA"
        android:layout_marginEnd="64dp"

        app:layout_constraintTop_toTopOf="@id/bInserir"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bInserir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="25dp"
        android:text="INSERIR"
        app:layout_constraintTop_toBottomOf="@id/lQtd"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tNomeLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toEndOf="@+id/lNome" />

    <EditText
        android:id="@+id/tMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lMarca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lMarca" />

    <EditText
        android:id="@+id/tQtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/lQtd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/lQtd" />
</androidx.constraintlayout.widget.ConstraintLayout>